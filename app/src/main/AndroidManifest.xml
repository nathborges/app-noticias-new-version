<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibm.newsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppFinal">
        <activity
            android:name=".UltimasNoticiasPorCategoria"
            android:exported="false" />
        <activity
            android:name=".UltimasNoticiasActivity"
            android:exported="true"
            android:screenOrientation="sensor"></activity>
        <activity
            android:name=".EsqueceuSenhaActivity"
            android:exported="false"
            android:screenOrientation="sensor"
            />
        <activity
            android:name=".CategoriasActivity"
            android:exported="false"
            android:screenOrientation="sensor"></activity>
        <activity
            android:name=".NoticiaActivity"
            android:exported="false" />
        <activity
            android:name=".CadastroActivity"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".InicioActivity"
            android:exported="true"
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SaibaMaisActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="sensor"></activity>
    </application>

</manifest>