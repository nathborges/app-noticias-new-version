<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodasNoticiasActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topmenu"
        android:layout_width="0dp"
        android:layout_height="141dp"
        android:layout_marginTop="1dp"
        android:paddingHorizontal="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="115dp"
            android:layout_height="93dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_action_name"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="32dp" />
        <GridLayout
            android:id="@+id/gridMenu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/categoriesButton"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:fontFamily="@font/visbyextrabold"
                android:gravity="bottom|center"
                android:text="categorias"
                android:textAllCaps="false"
                android:textColor="@color/azul_escuro"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lastnewsButton"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:fontFamily="@font/visbyextrabold"
                android:gravity="bottom|center"
                android:text="Ãºltimas noticias"
                android:textAllCaps="false"
                android:textColor="@color/azul_escuro"
                android:textSize="16sp" />
        </GridLayout>

        <View
            android:id="@+id/menuLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/azul_escuro"
            app:layout_constraintTop_toBottomOf="@+id/gridMenu"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>