<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingHorizontal="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visbyextrabold"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-15dp"
            android:lines="2"
            android:text="News."
            android:textAlignment="gravity"
            android:textColor="@color/azul_escuro"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent"/>
        <GridLayout
            android:id="@+id/gridMenu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLogo"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/categoriesButton"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:fontFamily="@font/visbyextrabold"
                android:gravity="bottom|center"
                android:text="@string/categories_option_menu"
                android:textAllCaps="false"
                android:textColor="@color/azul_escuro"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lastnewsButton"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:background="@color/white"
                android:fontFamily="@font/visbyextrabold"
                android:gravity="bottom|center"
                android:text="@string/news_option_menu"
                android:textAllCaps="false"
                android:textColor="@color/azul_escuro"
                android:textSize="18sp" />
        </GridLayout>
        <View
            android:id="@+id/menuLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/azul_escuro"
            app:layout_constraintTop_toBottomOf="@+id/gridMenu"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>