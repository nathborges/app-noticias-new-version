<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriasActivity">
    <fragment
        android:id="@+id/fragmentMenuCategorias"
        android:name="com.ibm.newsapp.Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@id/fragmentMenuCategorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/linearLayoutInsideScrollViewOnCategoriasActivity"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <GridLayout
            android:layout_weight="1"
            android:id="@+id/gridCategoryCards"
            android:layout_width="match_parent"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:id="@+id/categoryTech"
                style="@style/Card_Categories">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                    <ImageView
                        style="@style/imagem_primeiro_card"
                        android:id="@+id/cardCategoryTechImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="DuplicateIds" />
                    <TextView
                        style="@style/Card_Text_Categories"
                        android:text="@string/primeiro_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cardCategoryTechImage"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:id="@+id/categoryEconomy"
                style="@style/Card_Categories">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                    <ImageView
                        style="@style/imagem_segundo_card"
                        android:id="@+id/cardCategoryEconomyImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        style="@style/Card_Text_Categories"
                        android:text="@string/segundo_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cardCategoryEconomyImage"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:id="@+id/categorySports"
                style="@style/Card_Categories">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                    <ImageView
                        style="@style/imagem_terceiro_card"
                        android:id="@+id/cardCategorySportsImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        style="@style/Card_Text_Categories"
                        android:text="@string/terceiro_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cardCategorySportsImage"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/categoryHealth"
                app:cardCornerRadius="20dp"
                style="@style/Card_Categories">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                    <ImageView
                        style="@style/imagem_quarto_card"
                        android:id="@+id/cardCategoryImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        style="@style/Card_Text_Categories"
                        android:text="@string/quarto_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cardCategoryImage"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/categoryEnter"
                app:cardCornerRadius="20dp"
                style="@style/Card_Categories">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                    <ImageView
                        style="@style/imagem_quinto_card"
                        android:id="@+id/cardCategoryEnterImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        style="@style/Card_Text_Categories"
                        android:text="@string/quinto_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cardCategoryEnterImage" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/categoryScience"
                app:cardCornerRadius="20dp"
                style="@style/Card_Categories">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">
                    <ImageView
                        style="@style/imagem_sexto_card"
                        android:id="@+id/cardCategoryScienceImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        style="@style/Card_Text_Categories"
                        android:text="@string/sexto_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/cardCategoryScienceImage"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>